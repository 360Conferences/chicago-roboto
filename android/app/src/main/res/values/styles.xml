<resources xmlns:tools="http://schemas.android.com/tools">

  <attr name="borderWidth" format="dimension|reference" />
  <attr name="borderColor" format="color|reference" />
  <declare-styleable name="CircularImageView">
    <attr name="borderWidth" />
    <attr name="borderColor" />
  </declare-styleable>

  <style name="Platform.Theme.Conferences" parent="Theme.MaterialComponents.Light.NoActionBar">
  </style>

  <style name="Base.Theme.Conferences" parent="Platform.Theme.Conferences">

    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
    <item name="colorOnPrimary">@color/colorOnPrimary</item>
    <item name="colorSecondary">@color/colorSecondary</item>
    <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
    <item name="colorOnSecondary">@color/colorOnSecondary</item>

    <item name="android:navigationBarColor">@android:color/transparent</item>
    <item name="android:statusBarColor">@android:color/transparent</item>

    <item name="tabStyle">@style/Widget.Conferences.TabLayout</item>
  </style>

  <style name="AppTheme" parent="Base.Theme.Conferences"/>

  <style name="TwitterTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/twitter_blue</item>
  </style>

  <style name="GithubTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">?attr/colorOnSurface</item>
  </style>

  <style name="Widget.Conferences.TabLayout" parent="Widget.MaterialComponents.TabLayout">
    <item name="tabIndicatorColor">?attr/colorSecondary</item>
    <item name="tabTextColor">?attr/colorControlActivated</item>
  </style>

</resources>
